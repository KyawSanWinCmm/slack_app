
<div id="main">

<div>
<h2 class="style1"><%= @s_channel.channel_name%><sapn style="margin-left: 20px"> <i class="material-icons" >&#xe7fc;</i> <%= link_to @u_count,  'channeluser'%></span></h2>

    <hr>

    <p class="style21">1</p>

    <p class="style22"><%= @send_user.name%></p>
    
    <p class="style23"><%= @t_group_message.created_at.strftime("%F") %>/<%= @t_group_message.created_at.strftime("%I:%M%p") %></p>
            
    <p class="style3"> -->  <%= @t_group_message.groupmsg%></p>

</div>

<hr>

    <div class="txtmsg">
        <% @count = 0 %>
        <h2 class="style1">Reply</h2>
        <hr>
        
        <% @t_group_threads.each do |t_group_thread| %>

            <p class="style21"><%= @count += 1 %></p>

            <p class="style22"><%= t_group_thread.name%></p>

            <p class="style23"><%= t_group_thread.created_at.strftime("%F") %>/<%= t_group_thread.created_at.strftime("%I:%M%p") %></p>

            <p class="style24"></p>
            
            <% if @t_group_star_thread_msgids.include? t_group_thread.id %>
                <%= link_to "", groupunstarthread_path(:id => t_group_thread.id), class:'fas fa-star' %></li>
            <% else %>
                <%= link_to "",  groupstarthread_path(:id => t_group_thread.id), class:'far fa-star'%></li>
            <% end %> 

            <p class="style3"> -->  <%= t_group_thread.groupthreadmsg%></p>
                
        <% end %>
    </div>
</div>

<div class="textbox">
    <%= form_for(:session, url: groupthreadmsg_path) do |f| %>
    <%= f.text_field :message, class: 'form-control' %>
    <%= f.submit "Send", class: "btn btn-primary" %>
    <% end %>
</div>

<div>
    <%= render 'leftpanel/leftpanel' %>
</div>