 <div class="txtmsg">	
<% @count = 0 %>
    <div id="grouplist">	
        <div class="title">		
            <h2 class="style1">
            <% if @m_channelsids.include?session[:s_channel_id].to_i%>
            <span>
                <%= link_to "", channeledit_path(id: @s_channel.id), class: 'fa fa-edit',  style: 'font-size:17px'%>
            </span>
            <% end%>
            <%= @s_channel.channel_name%> 
            <sapn style="margin-left: 20px"> 
                <i class="material-icons">&#xe7fc;</i> <%= link_to @u_count, channeluser_path%>
            </span>
            </h2>
        </div>
        <div class="style1" style="padding-top: 80px">
                <%= link_to "Load Mode",  refresh_group_url , class:'glyphicon glyphicon-refresh'%>
        </div>
        <% @t_group_message_dates.each do |t_group_message_date| %>
            <% if @t_group_message_datesize.include?t_group_message_date.created_date.to_s %>
                <h2 class="style1"><%= t_group_message_date.created_date.to_s %></h2>
                <% @t_group_messages.each do |t_group_message| %>
                    <% if t_group_message_date.created_date.to_s == t_group_message.created_at.strftime("%F").to_s %>
                        <p class="style21"><%= @count += 1 %></p>

                        <p class="style22"><%= t_group_message.name%></p>

                        <p class="style23"><%= t_group_message.created_at.strftime("%I:%M%p")%></p>

                        <p class="style24"><%= link_to t_group_message.count,  t_group_message, class: 'fab fa-facebook-messenger'%></p>

                        <% if @t_group_star_msgids.include? t_group_message.id %>
                        <%= link_to "",  groupunstar_path(:id => t_group_message.id), class:'fas fa-star' %>
                        <% else %>
                        <%= link_to "",  groupstar_path(:id => t_group_message.id), class:'far fa-star'%>
                        <% end %>

                        <p class="style3"> -->  <%= t_group_message.groupmsg%></p>
                        <hr>
                    <% end %>
                <% end %>
            <% end %>
        <% end %>
   </div>
</div>


<script>
    window.scrollTo(0,document.body.scrollHeight);
</script>



